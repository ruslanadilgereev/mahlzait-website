---
import Layout from "Layout.astro";
import StructuredData from "@components/seo/StructuredData.astro";
import defaultTemplateConfig from "utils/config";
import RechnerPage from "@modules/rechner";

const seo = {
  title: "Ernährungsrechner - Kalorien, Makros & Defizit berechnen | Mahlzait",
  description:
    "Kostenlose Rechner für Kalorienbedarf, Kaloriendefizit und Makros. Berechne deinen persönlichen Bedarf und starte mit dem Tracking. Wissenschaftlich fundiert.",
};
---

<Layout {...defaultTemplateConfig} seo={seo}>
  <StructuredData config={defaultTemplateConfig} type="page" pageTitle="Rechner" />

  <!-- CollectionPage Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      name: "Ernährungsrechner",
      description: seo.description,
      mainEntity: {
        "@type": "ItemList",
        itemListElement: [
          {
            "@type": "ListItem",
            position: 1,
            name: "Grundumsatz Rechner",
            description: "Berechne deinen Grundumsatz (BMR) und Gesamtenergieumsatz (TDEE)",
            url: "https://www.mahlzait.de/grundumsatz-rechner",
          },
          {
            "@type": "ListItem",
            position: 2,
            name: "BMI Rechner",
            description: "Berechne deinen Body Mass Index und finde dein Idealgewicht",
            url: "https://www.mahlzait.de/bmi-rechner",
          },
          {
            "@type": "ListItem",
            position: 3,
            name: "Kalorienbedarf berechnen",
            description: "Berechne deinen täglichen Kalorienbedarf mit der Mifflin-St Jeor Formel",
            url: "https://www.mahlzait.de/kalorienbedarf-berechnen",
          },
          {
            "@type": "ListItem",
            position: 4,
            name: "Kaloriendefizit berechnen",
            description: "Plane dein Abnehm-Ziel mit dem Defizit-Rechner",
            url: "https://www.mahlzait.de/kaloriendefizit-berechnen",
          },
          {
            "@type": "ListItem",
            position: 5,
            name: "Makros berechnen",
            description: "Berechne deine optimale Makroverteilung",
            url: "https://www.mahlzait.de/makros-berechnen",
          },
          {
            "@type": "ListItem",
            position: 6,
            name: "Abnahmedatum berechnen",
            description: "Berechne dein exaktes Zieldatum fürs Abnehmen",
            url: "https://www.mahlzait.de/abnahmedatum-berechnen",
          },
          {
            "@type": "ListItem",
            position: 7,
            name: "Kalorienverbrauch Rechner",
            description: "Wie lange musst du joggen für einen Döner?",
            url: "https://www.mahlzait.de/kalorienverbrauch-rechner",
          },
          {
            "@type": "ListItem",
            position: 8,
            name: "Protein-Bedarf Rechner",
            description: "Berechne deinen optimalen täglichen Proteinbedarf",
            url: "https://www.mahlzait.de/protein-bedarf-rechner",
          },
          {
            "@type": "ListItem",
            position: 9,
            name: "Alkohol-Kalorien Rechner",
            description: "Wie viele Kalorien hat dein Feierabendbier?",
            url: "https://www.mahlzait.de/alkohol-kalorien-rechner",
          },
          {
            "@type": "ListItem",
            position: 10,
            name: "Wasserbedarfs-Rechner",
            description: "Berechne deinen optimalen täglichen Wasserbedarf",
            url: "https://www.mahlzait.de/wasserbedarf-rechner",
          },
          {
            "@type": "ListItem",
            position: 11,
            name: "Intervallfasten-Rechner",
            description: "Berechne deinen optimalen Fasten-Zeitplan für 16:8, 18:6, 5:2 und mehr",
            url: "https://www.mahlzait.de/intervallfasten-rechner",
          },
          {
            "@type": "ListItem",
            position: 12,
            name: "Schritte in Kalorien Rechner",
            description: "Berechne wie viele Kalorien du bei 10.000 Schritten verbrennst",
            url: "https://www.mahlzait.de/schritte-kalorien-rechner",
          },
          {
            "@type": "ListItem",
            position: 13,
            name: "Döner Kalorien Rechner",
            description: "Berechne die Kalorien in Döner Kebab, Dürüm, Lahmacun und mehr",
            url: "https://www.mahlzait.de/doener-kalorien-rechner",
          },
          {
            "@type": "ListItem",
            position: 14,
            name: "Cheat-Day Rechner",
            description: "Plane deinen Cheat-Day clever und berechne Extra-Kalorien ohne Schuldgefühle",
            url: "https://www.mahlzait.de/cheat-day-rechner",
          },
          {
            "@type": "ListItem",
            position: 15,
            name: "Körperfettanteil Rechner",
            description: "Berechne deinen Körperfettanteil (KFA) mit der US Navy Methode",
            url: "https://www.mahlzait.de/koerperfett-rechner",
          },
          {
            "@type": "ListItem",
            position: 16,
            name: "Idealgewicht Rechner",
            description: "Berechne dein persönliches Idealgewicht mit 4 wissenschaftlichen Formeln",
            url: "https://www.mahlzait.de/idealgewicht-rechner",
          },
        ],
      },
    })}
  </script>

  <RechnerPage client:load config={defaultTemplateConfig} />
</Layout>

