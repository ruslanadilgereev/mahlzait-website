---
import TermsAndConditionsPage from "@modules/termsAndConditions";
import Layout from "Layout.astro";
import StructuredData from "@components/seo/StructuredData.astro"
import defaultTemplateConfig from "utils/config";

// German version of Terms and Conditions
const germanSeo = {
  title: "Nutzungsbedingungen - Mahlzait Kalorienzähler App",
  description: "Nutzungsbedingungen für die Mahlzait App: Rechte, Pflichten, Haftung und Datenschutz. Transparente Bedingungen für Kostenlos- und Pro-Version.",
};
---

<Layout
  {...defaultTemplateConfig}
  seo={germanSeo}
>
  <StructuredData config={defaultTemplateConfig} type="page" pageTitle="Nutzungsbedingungen" />
  <TermsAndConditionsPage client:load config={defaultTemplateConfig} />
</Layout>

