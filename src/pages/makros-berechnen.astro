---
import Layout from "Layout.astro";
import StructuredData from "@components/seo/StructuredData.astro";
import defaultTemplateConfig from "utils/config";
import MakrosPage from "@modules/makros";

const seo = {
  title: "Makros berechnen - Protein, Carbs, Fett Rechner | Mahlzait",
  description:
    "Berechne deine optimale Makroverteilung für Abnehmen, Muskelaufbau oder Erhaltung. Kostenloser Makro-Rechner zeigt Protein, Kohlenhydrate und Fett in Gramm.",
};
---

<Layout {...defaultTemplateConfig} seo={seo}>
  <StructuredData config={defaultTemplateConfig} type="page" pageTitle="Makros berechnen" />

  <!-- FAQPage Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "Wie viel Protein brauche ich am Tag?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Die allgemeine Empfehlung liegt bei 1,6-2,2g Protein pro kg Körpergewicht. Beim Abnehmen eher am oberen Ende (2g), beim Muskelaufbau mindestens 1,6g. Beispiel: Bei 75kg sind das 120-165g Protein täglich.",
          },
        },
        {
          "@type": "Question",
          name: "Wie berechne ich meine Makros zum Abnehmen?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Zum Abnehmen empfehlen wir: 30% Protein, 40% Kohlenhydrate, 30% Fett. Der hohe Proteinanteil schuetzt die Muskelmasse. Bei 1500 kcal wären das ca. 113g Protein, 150g Carbs und 50g Fett.",
          },
        },
        {
          "@type": "Question",
          name: "Was ist wichtiger: Kalorien oder Makros?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Für Gewichtsverlust sind Kalorien entscheidend. Makros optimieren die Körperzusammensetzung: Genug Protein erhält Muskeln, die richtige Fett-Menge stützt Hormone. Beides zusammen ergibt die besten Ergebnisse.",
          },
        },
        {
          "@type": "Question",
          name: "Muss ich meine Makros jeden Tag exakt treffen?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Nein, kleine Abweichungen sind okay. Wichtig ist der Durchschnitt über die Woche. Protein sollte aber möglichst konstant bleiben (+-10g). Carbs und Fett können flexibler sein, solange die Gesamtkalorien stimmen.",
          },
        },
      ],
    })}
  </script>

  <!-- HowTo Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "HowTo",
      name: "Makros berechnen und tracken",
      description: "So berechnest du deine optimale Makroverteilung",
      step: [
        {
          "@type": "HowToStep",
          name: "Ziel festlegen",
          text: "Entscheide ob du abnehmen, Muskeln aufbaün oder dein Gewicht halten willst",
        },
        {
          "@type": "HowToStep",
          name: "Kalorienbedarf ermitteln",
          text: "Berechne deinen täglichen Kalorienbedarf (TDEE)",
        },
        {
          "@type": "HowToStep",
          name: "Makro-Verteilung wählen",
          text: "Wähle die passende Verteilung für dein Ziel (z.B. 30/40/30 zum Abnehmen)",
        },
        {
          "@type": "HowToStep",
          name: "Gramm ausrechnen",
          text: "Rechne die Prozente in Gramm um: Protein und Carbs haben 4 kcal/g, Fett hat 9 kcal/g",
        },
        {
          "@type": "HowToStep",
          name: "Täglich tracken",
          text: "Nutze eine App wie Mahlzait um deine Makros zu tracken",
        },
      ],
    })}
  </script>

  <MakrosPage client:load config={defaultTemplateConfig} />
</Layout>

