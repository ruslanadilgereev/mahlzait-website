---
import Layout from "Layout.astro";
import StructuredData from "@components/seo/StructuredData.astro";
import defaultTemplateConfig from "utils/config";
import KalorienZaehlenPage from "@modules/kalorienzaehlen";
import {
  kalorienZaehlenFaq,
  kalorienZaehlenHowToSteps,
  kalorienZaehlenSeo,
} from "@modules/kalorienzaehlen/content";

const seo = kalorienZaehlenSeo;
---

<Layout {...defaultTemplateConfig} seo={seo}>
  <StructuredData
    config={defaultTemplateConfig}
    type="page"
    pageTitle="Kalorien zählen"
  />

  <!-- FAQPage Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: kalorienZaehlenFaq.map((item) => ({
        "@type": "Question",
        name: item.q,
        acceptedAnswer: {
          "@type": "Answer",
          text: item.a,
        },
      })),
    })}
  </script>

  <!-- HowTo Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "HowTo",
      name: "Kalorien zählen: Schritt-für-Schritt",
      description: seo.description,
      step: kalorienZaehlenHowToSteps.map((s, i) => ({
        "@type": "HowToStep",
        position: i + 1,
        name: s.name,
        text: s.text,
      })),
    })}
  </script>

  <KalorienZaehlenPage client:load config={defaultTemplateConfig} />
</Layout>


