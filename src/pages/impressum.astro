<Layout {...defaultTemplateConfig} seo={impressumSeo}>
  <StructuredData config={defaultTemplateConfig} type="page" pageTitle="Impressum" />
  <main class="prose prose-lg max-w-4xl mx-auto px-6 py-16">
    <div set:html={impressumContent.split('\n').map(line => {
      if (line.startsWith('# ')) return `<h1>${line.substring(2)}</h1>`;
      if (line.startsWith('## ')) return `<h2>${line.substring(3)}</h2>`;
      if (line.startsWith('### ')) return `<h3>${line.substring(4)}</h3>`;
      if (line.startsWith('**') && line.endsWith('**')) return `<p><strong>${line.substring(2, line.length - 2)}</strong></p>`;
      if (line.startsWith('- ')) return `<li>${line.substring(2)}</li>`;
      if (line.trim() === '---') return '<hr>';
      if (line.trim() === '') return '<br>';
      return `<p>${line}</p>`;
    }).join('\n')} />
  </main>
</Layout>

