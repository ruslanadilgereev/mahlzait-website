---
import PrivacyPolicyPage from "@modules/privacyPolicy";
import Layout from "Layout.astro";
import StructuredData from "@components/seo/StructuredData.astro"
import defaultTemplateConfig from "utils/config";

// German version of Privacy Policy
const germanSeo = {
  title: "Datenschutzerklärung - Mahlzait Kalorienzähler App",
  description: "Erfahre wie Mahlzait deine Daten schützt: DSGVO-konform, Daten in Deutschland, keine Weitergabe an Dritte. Transparente Datenschutzerklärung für unsere Kalorienzähler App.",
};
---

<Layout
  {...defaultTemplateConfig}
  seo={germanSeo}
>
  <StructuredData config={defaultTemplateConfig} type="page" pageTitle="Datenschutzerklärung" />
  <PrivacyPolicyPage client:load config={defaultTemplateConfig} />
</Layout>

