---
import Layout from "Layout.astro";
import StructuredData from "@components/seo/StructuredData.astro";
import defaultTemplateConfig from "utils/config";
import KalorienbedarfPage from "@modules/kalorienbedarf";

const seo = {
  title: "Kalorienbedarf berechnen - Kostenloser Rechner | Mahlzait",
  description:
    "Berechne deinen täglichen Kalorienbedarf mit der Mifflin-St Jeor Formel. Kostenloser Kalorienrechner für Grundumsatz (BMR) und Gesamtbedarf (TDEE). Erfahre, wie viele Kalorien du zum Abnehmen brauchst.",
};
---

<Layout {...defaultTemplateConfig} seo={seo}>
  <StructuredData config={defaultTemplateConfig} type="page" pageTitle="Kalorienbedarf berechnen" />

  <!-- FAQPage Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      mainEntity: [
        {
          "@type": "Question",
          name: "Wie genau ist die Kalorienberechnung?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Die Mifflin-St Jeor Formel gilt als genaüste Methode zur Schätzung des Grundumsatzes. Individuelle Abweichungen von 10-15% sind möglich. Beobachte dein Gewicht über 2-3 Wochen und passe dann an.",
          },
        },
        {
          "@type": "Question",
          name: "Welches Kaloriendefizit ist gesund?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Ein Defizit von 300-500 kcal pro Tag gilt als moderat und nachhaltig. Das entspricht etwa 0,5 kg Gewichtsverlust pro Woche. Mehr als 1000 kcal Defizit wird nicht empfohlen.",
          },
        },
        {
          "@type": "Question",
          name: "Was ist der Unterschied zwischen BMR und TDEE?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "BMR (Grundumsatz) ist der Kalorienverbrauch im Ruhezustand. TDEE (Gesamtbedarf) berücksichtigt zusätzlich dein Aktivitätslevel und zeigt, wie viele Kalorien du täglich verbrauchst.",
          },
        },
        {
          "@type": "Question",
          name: "Wie tracke ich meine Kalorien am einfachsten?",
          acceptedAnswer: {
            "@type": "Answer",
            text: "Mit Mahlzait kannst du Mahlzeiten per Foto, Text oder Barcode loggen. Die KI erkennt dein Essen und berechnet die Kalorien automatisch - in Sekunden statt Minuten.",
          },
        },
      ],
    })}
  </script>

  <!-- HowTo Schema -->
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      "@context": "https://schema.org",
      "@type": "HowTo",
      name: "Kalorienbedarf berechnen",
      description:
        "Berechne deinen persönlichen Kalorienbedarf in 5 einfachen Schritten",
      step: [
        {
          "@type": "HowToStep",
          name: "Geschlecht angeben",
          text: "Wähle dein biologisches Geschlecht (männlich/weiblich)",
        },
        {
          "@type": "HowToStep",
          name: "Alter eingeben",
          text: "Gib dein Alter in Jahren ein",
        },
        {
          "@type": "HowToStep",
          name: "Körpergrösse eingeben",
          text: "Gib deine Grösse in Zentimetern ein",
        },
        {
          "@type": "HowToStep",
          name: "Gewicht eingeben",
          text: "Gib dein aktuelles Gewicht in Kilogramm ein",
        },
        {
          "@type": "HowToStep",
          name: "Aktivitätslevel wählen",
          text: "Wähle wie aktiv du im Alltag bist (von sitzend bis sehr aktiv)",
        },
      ],
    })}
  </script>

  <KalorienbedarfPage client:load config={defaultTemplateConfig} />
</Layout>

